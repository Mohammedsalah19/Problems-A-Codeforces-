using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace A_Calculating_Function
{
    class Program
    {
        static void Main(string[] args)
        {
            int n = int.Parse(Console.ReadLine());
            int x = 0;
            for (int i = 0; i <=n; i++)
            {
                if (i%2 !=0)
                {
                    i = i * -1;
                    x += i;
                    i = i * -1;
                }
                else
                {
                    x += i;
                }               
            }
            Console.WriteLine(x);
        }
    }
}
